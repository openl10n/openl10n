<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity table="translation_phrases" name="Openl10n\Bundle\InfraBundle\Entity\Phrase">
        <unique-constraints>
            <unique-constraint name="locale" columns="key_id,locale" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="locale" column="locale" type="string" length="255" />
        <field name="text" column="text" type="text" />
        <field name="isApproved" column="is_approved" type="boolean" />
        <field name="createdAt" column="created_at" type="datetime" />
        <field name="updatedAt" column="updated_at" type="datetime" />

        <many-to-one field="key" target-entity="Key" inversed-by="phrases">
            <join-columns>
                <join-column name="key_id" referenced-column-name="id" nullable="false" />
            </join-columns>
        </many-to-one>
    </entity>

</doctrine-mapping>
