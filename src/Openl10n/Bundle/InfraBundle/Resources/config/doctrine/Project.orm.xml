<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        table="projects"
        name="Openl10n\Bundle\InfraBundle\Entity\Project"
        repository-class="Openl10n\Bundle\InfraBundle\Repository\ProjectRepository"
        >

        <unique-constraints>
            <unique-constraint name="slug" columns="slug" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="slug" column="slug" type="string" length="64" />
        <field name="name" column="name" type="string" length="64" />
        <field name="defaultLocale" column="default_locale" type="string" length="8" />
        <field name="description" column="description" type="string" length="255" />

        <one-to-many field="languages" target-entity="Language" mapped-by="project">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
