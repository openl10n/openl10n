<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity table="translation_keys" name="Openl10n\Bundle\CoreBundle\Entity\TranslationKey">
        <unique-constraints>
            <unique-constraint name="key_id" columns="domain_id,key_id" />
        </unique-constraints>

        <indexes>
            <index name="hash" columns="domain_id,hash"/>
        </indexes>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="key" column="key_id" type="string" length="255" />
        <field name="hash" column="hash" type="string" length="255" />

        <many-to-one field="domain" target-entity="Domain" inversed-by="keys">
            <join-columns>
                <join-column name="domain_id" referenced-column-name="id" nullable="false" />
            </join-columns>
        </many-to-one>

        <one-to-many field="phrases" target-entity="TranslationPhrase" mapped-by="key">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
