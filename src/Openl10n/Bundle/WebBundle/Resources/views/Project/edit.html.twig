{% extends '@Openl10nWeb/Project/layout.html.twig' %}

{% set active_menu = 'edit' %}

{% block settings_content %}
  <div class="row">
    <div class="col-sm-12">
      <h3 class="title title-md title-underlined">
        Edit project settings
      </h3>
    </div>
    <div class="col-sm-8">
      <form action="{{ path('openl10n_project_edit', {'slug': project.slug}) }}" method="POST" novalidate>

          <div>
            {{ form_widget(form) }}
          </div>

          <div>
            <button type="submit" class="btn btn-primary">Update</button>

            <a href="{{ path('openl10n_project_show', {'slug': project.slug}) }}" class="btn btn-link">
              Cancel
            </a>
          </div>
      </form>
    </div>
  </div>
{% endblock %}
