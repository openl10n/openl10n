{% extends '@Openl10nWeb/layout/base.html.twig' %}

{% block content %}

  <div class="ol-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div>
            <h2 class="ol-header-title">
              Change my password
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-md-offset-3">
        <form action="{{ path('openl10n_user_password') }}" method="POST" novalidate>

            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
