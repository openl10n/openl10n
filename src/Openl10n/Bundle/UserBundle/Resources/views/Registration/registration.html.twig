{% extends '@Openl10nWeb/layout/base.html.twig' %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form action="{{ path('openl10n_registration', {'key': key}) }}" {{ form_enctype(form) }} method="POST" class="panel panel-default" novalidate>
          <div class="panel-heading">
            <h3 class="panel-title">Registration</h3>
          </div>

          <div class="panel-body">
            {{ form_widget(form) }}
          </div>

          <div class="panel-footer">
            <button type="submit" class="btn btn-primary" class="btn btn-primary">Register</button>
            <a href="{{ path('openl10n_security_login') }}" class="btn btn-link">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
