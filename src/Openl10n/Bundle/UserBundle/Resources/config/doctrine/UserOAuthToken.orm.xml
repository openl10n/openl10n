<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity table="user_oauth_tokens" name="Openl10n\Bundle\UserBundle\Entity\UserOAuthToken">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="providerName" column="provider_name" type="string" length="255" />
        <field name="tokenId" column="token_id" type="string" length="255" />

        <many-to-one field="user" target-entity="User" inversed-by="oauthTokens">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" />
            </join-columns>
        </many-to-one>
    </entity>

</doctrine-mapping>
