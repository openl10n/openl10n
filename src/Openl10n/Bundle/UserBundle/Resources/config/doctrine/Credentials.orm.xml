<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        table="user_credentials"
        name="Openl10n\Bundle\UserBundle\Entity\Credentials"
        repository-class="Openl10n\Bundle\UserBundle\Repository\CredentialsRepository"
        >
        <unique-constraints>
            <unique-constraint name="user" columns="user_id" />
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="password" column="password" type="string" length="255" />
        <field name="salt" column="salt" type="string" length="255" />

        <one-to-one field="user" target-entity="User" inversed-by="credentials">
            <join-columns>
                <join-column name="user_id" referenced-column-name="id" nullable="false" />
            </join-columns>
        </one-to-one>
    </entity>

</doctrine-mapping>
