<div class="col-md-12">
  <div class="pull-right">
    <form action="#" class="form-inline">
      <div class="form-group">
        <select class="form-control source-locale">
          {% for language in languages %}
            <option value="{{ language.locale }}">
              {{ language.locale.displayName }}
              ({{ language.locale }})
            </option>
          {% endfor %}
        </select>

        <i class="icon-arrow-right"></i>

        <select class="form-control target-locale">
          {% for language in languages %}
            <option value="{{ language.locale }}">
              {{ language.locale.displayName }}
              ({{ language.locale }})
            </option>
          {% endfor %}
        </select>
      </div>
    </form>
  </div>

  <h2 class="ol-header-title" id="title">
    <a href="{{ path('openl10n_project_show', {slug: project.slug}) }}" data-bypass>
      {{ project.name }}
    </a>

    <span>
      <i class="icon-double-angle-right"></i>
    </span>

    <span class="dropdown">
      <a href="#" role="button" data-toggle="dropdown">
        <%- domain %>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu domain-list" role="menu">
        {% for domain in domains %}
          <li>
            <a href="#" data-slug="{{ domain.slug }}">
              {{ domain.name }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </span>
  </h2>
</div>
